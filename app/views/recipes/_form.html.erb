<%= form_for @recipe do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :ingredients %><br>
    <%= f.text_field :ingredients%><br>
    <%= f.label :description %><br>
    <%= f.text_field :description %><br>
    <%= f.label :minutes %><br>
    <%= f.number_field :minutes, in: (0..200) %><br>
    <br>
    <%= f.submit %><br>
  <% end %>