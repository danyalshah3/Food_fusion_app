<h1> Restaurants </h1>


<%= form_tag restaurants_path, method: :get do %>
  <%= label_tag :location %>
  <%= text_field_tag :location, @params["location"], placeholder: 10025 %>
  <%= submit_tag "Search!" %>
<% end %>


<div class="wrapper">
<% @restaurants.each do |restaurant| %>
    <li><%= link_to restaurant.name, restaurant %> </li><br>
    <iframe
    width="300"
    height="200"
    style="border:0"
    loading="lazy"
    allowfullscreen
    src="https://www.google.com/maps/embed/v1/place?key=<%= ENV["GOOGLE_API_KEY"] %>
      &q=<%= restaurant.address %>">
  </iframe>
    <li>Address: <%= restaurant.address %></li><br>
    <br>
    <% end %>
    </div>

